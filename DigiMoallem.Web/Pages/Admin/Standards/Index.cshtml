@page
@model DigiMoallem.Web.Pages.Admin.Standards.IndexModel

@{
    ViewData["Title"] = "لیست استانداردها";
}

<div class="container">

    <h1 class="my-5"> <i class="fa fa-stamp text-danger ml-2"></i> @ViewData["Title"]</h1>

    @if (TempData["Success"] != null)
    {
        <!-- success notification -->
        <div class="alert alert-success">
            <i class="fa fa-check-circle ml-2"></i> @TempData["Success"]
        </div>
    }

    <div class="my-3 clearfix">
        <!-- add -->
        <a asp-area=""
           asp-page="Create"
           class="btn btn-outline-success float-right">
            <i class="fa fa-plus ml-1"></i> افزودن استاندارد جدید
        </a>

        <!-- standards count -->
        <button class="btn btn-primary float-left english-font">
            <i class="fa fa-list ml-1"></i> @Model.StandardsCount
        </button>
    </div>

    <!-- standards table -->
    <div class="table-responsive">

        <table class="table table-dark table-striped table-bordered">
            <tr>
                <th class="th-sm">
                    شناسه
                </th>
                <th class="th-sm">
                    عنوان
                </th>
                <th class="th-sm">
                    دستورات
                </th>
            </tr>
            @if (Model.Standards.Count == 0)
            {
                <tr class="bg-dark text-light">
                    <td colspan="5" class="py-4">
                        <i class="fas fa-exclamation-triangle ml-2"></i> لیست استانداردها خالی است.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var standard in Model.Standards)
                {
                    <tr>
                        <td class="english-font">@standard.StandardId</td>
                        <td>@standard.Title</td>
                        <td class="text-center">

                            <a asp-area=""
                               asp-page="/Admin/Standards/Edit"
                               asp-route-id="@standard.StandardId"
                               class="btn btn-outline-warning btn-sm">
                                <i class="fa fa-pen ml-2"></i> ویرایش
                            </a>

                            <a asp-area=""
                               asp-page="/Admin/Standards/Delete"
                               asp-route-id="@standard.StandardId"
                               class="btn btn-outline-danger btn-sm">
                                <i class="fa fa-trash ml-2"></i> حذف
                            </a>

                        </td>
                    </tr>
                }
            }
        </table>

    </div>

</div>
