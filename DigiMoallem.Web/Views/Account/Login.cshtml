@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-lg-6 col-md-6 col-12">
        <div class="card my-5 p-3">

            <h1 class="my-4 text-center">@ViewData["Title"]</h1>

            @if (ViewData["NotValid"] != null)
            {
                <!-- user inputs is not valid -->
                <div class="alert alert-danger">
                    @ViewData["NotValid"]
                </div>
            }

            <form asp-action="Login" method="post">
                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />

                <!-- email -->
                <div class="md-form mb-4">
                    <input type="text" asp-for="Email" class="form-control text-direction-ltr english-font" />
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- password -->
                <div class="md-form mb-4">
                    <input type="password" asp-for="Password" class="form-control text-direction-ltr" />
                    <label asp-for="Password"></label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- remember me -->
                <div class="custom-control custom-checkbox margin-2">
                    <input type="checkbox" class="custom-control-input" asp-for="RememberMe" />
                    <label class="custom-control-label text-dark" asp-for="RememberMe"></label>
                </div>

                <div class="form-group">
                    <!-- submit -->
                    <button class="btn btn-primary my-4"> <i class="fa fa-signin"></i> ورود </button>
                </div>

                <div>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-sm"> عضویت در سایت </a>
                    <a asp-controller="Account" asp-action="ForgetPassword" class="btn btn-outline-blue-grey btn-sm"> فراموشی رمز عبور </a>
                </div>

            </form>

        </div>
    </div>
</div>