@page "{id}"
@model DigiMoallem.Web.Pages.Admin.Accountings.EditModel

@{
    ViewData["Title"] = "ویرایش واریزی";
}

    <div class="container">

        <!-- back to accountings -->
        <a asp-area=""
           asp-page="Index"
           class="btn btn-outline-info">
            <i class="fas fa-arrow-right ml-2"></i> بازگشت
        </a>

        <h1 class="my-5"> <i class="fa fa-book ml-2"></i> @ViewData["Title"]</h1>

        <form method="post" class="md-form">
            <input type="hidden" asp-for="Payment.PaymentId" />
            <input type="hidden" asp-for="Payment.PaymentDate" />

            <div class="container">

                <div asp-validation-summary="ModelOnly" class="text-danger my-4"></div>

                @if (TempData["WrongInputs"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["WrongInputs"]
                    </div>
                }

                @if (TempData["OperationFailed"] != null)
                {
                    <div class="alert alert-danger">
                        @TempData["OperationFailed"]
                    </div>
                }

                <div class="row">
                    <div class="col-12 col-sm-12 col-md-6">

                        <!-- teachers -->
                        <div class="md-form mb-4">
                            <label asp-for="Payment.TeacherId"></label>
                            <select class="browser-default custom-select select-list" asp-for="Payment.TeacherId" asp-items="@ViewData["Teachers"] as SelectList"></select>

                            <span asp-validation-for="Payment.TeacherId"></span>
                        </div>

                        <!-- description -->
                        <div class="md-form mb-4">
                            <label asp-for="Payment.Description"></label>
                            <input type="text" asp-for="Payment.Description" class="form-control text-direction-ltr" />

                            <span asp-validation-for="Payment.Description" class="text-danger"></span>
                        </div>

                        <div class="form-group my-5">
                            <!-- create -->
                            <button type="submit" class="btn btn-outline-warning">
                                <i class="fa fa-pen ml-2"></i> ویرایش تراکنش جدید
                            </button>
                        </div>

                    </div>
                    <div class="col-12 col-sm-12 col-md-6">

                        <!-- amount -->
                        <div class="md-form mb-4">
                            <label asp-for="Payment.Amount"></label>
                            <input type="text" asp-for="Payment.Amount" class="form-control text-direction-ltr" />

                            <span asp-validation-for="Payment.Amount" class="text-danger"></span>
                        </div>

                    </div>
                </div>

            </div>
        </form>

    </div>