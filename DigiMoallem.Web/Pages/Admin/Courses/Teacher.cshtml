@page
@model DigiMoallem.Web.Pages.Admin.Courses.TeacherModel
@inject ICourseService  _courseService

@{
    ViewData["Title"] = "لیست دروس";
}

<h1 class="my-5"> <i class="fa fa-database ml-2"></i> @ViewData["Title"]</h1>

<!-- breadcrumb -->
<div class="bc-icons-2">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb dark-bg-admin lighten-5">
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>

</div>

<!-- create succeeded -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<!-- search -->
<div class="row">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
        <div class="md-form">
            <input type="text" id="searchInput" class="form-control">
            <label for="searchInput">جستجو درس ها</label>
        </div>
    </div>
</div>

<div class="p-3">
    <!-- add -->
    <a asp-area=""
       asp-page="Create" 
       class="btn btn-success btn-sm"> 
    <i class="fa fa-plus ml-2"></i> افزودن درس جدید
    </a>
</div>

<!-- pagination -->
<nav aria-label="Page navigation" class="my-3">
    <ul class="pagination pagination-circle pg-dark justify-content-center">
        @for (int i = 1; i <= Model.CourseVM.PageCount; i++)
        {
            <li class="page-item english-font @((Model.CourseVM.CurrentPage == i) ? "active" : "")">
                <a href="/Admin/Courses?pageId=@i" class="page-link">@i</a>
            </li>
        }
    </ul>
</nav>

<!-- courses table -->
<div class="table-responsive">
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th class="th-sm">
                    شناسه
                </th>
                <th class="th-sm">
                    عنوان دوره
                </th>
                <th class="th-sm">
                    نام استاد
                </th>
                <th class="th-sm">
                    طول دوره
                </th>
                <th class="th-sm">
                    تعداد بخش ها
                </th>
                <th class="th-sm">
                    دستورات
                </th>
            </tr>
        </thead>
        <tbody id="dataTable">
            @if (Model.CourseVM.Courses.Count == 0)
            {
                <tr class="bg-dark text-light">
                    <td colspan="5" class="py-4">
                        <i class="fas fa-exclamation-triangle ml-2"></i> لیست دروس خالی است.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var course in Model.CourseVM.Courses)
                {
                    @if (User.Identity.Name == _courseService.GetCourseById(course.CourseId).User.UserName)
                    {
                        <tr>
                            <td><img class="img-thumbnails" src="~/Images/Thumbnails/@course.ImageName" alt="درس" /></td>
                            <td class="english-font">@course.CourseId</td>
                            <td>@course.Title</td>
                            <td>@course.Teacher</td>
                            <td class="english-font">@course.EpisodesCount</td>
                            <td class="text-center">

                                <a asp-area=""
                                   asp-page="/Admin/Courses/Edit"
                                   asp-route-id="@course.CourseId"
                                   class="btn btn-warning btn-sm"> 
                                 <i class="fa fa-pen ml-2"></i> ویرایش
                                </a>

                                <a asp-area=""
                                   asp-page="/Admin/Courses/Episodes"
                                   asp-route-id="@course.CourseId" 
                                   class="btn btn-primary btn-sm"> 
                                 <i class="fa fa-files ml-2"></i> بخش ها
                                </a>

                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/Admin/Scripts/Site.js"></script>
}