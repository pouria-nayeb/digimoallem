@model ResetPasswordViewModel

@{
    ViewData["Title"] = "بازنشانی رمز عبور";
}

<div class="row m-0 w-100">
    <div class="col-lg-6 col-md-6 col-12">

        <div class="card border-primary" style="margin:68px 0">
            <div class="card-header">
                <i class="fa fa-recycle ml-2"></i> @ViewData["Title"]
            </div>
            <div class="card-body">

                <form asp-area="" asp-controller="Account" asp-action="ResetPassword" method="post">

                    @if (ViewData["NotValid"] != null)
                    {
                        <!-- user inputs is not valid -->
                        <div class="alert alert-danger">
                            @ViewData["NotValid"]
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly"></div>

                    <!-- password -->
                    <div class="form-group mb-2">
                        <label asp-for="Password"></label>
                        <input type="password"
                               asp-for="Password"
                               class="form-control text-direction-ltr text-left english-font" />

                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- confirm password -->
                    <div class="form-group mb-2">
                        <label asp-for="ConfirmPassword"></label>
                        <input type="password"
                               asp-for="ConfirmPassword"
                               class="form-control text-direction-ltr text-left english-font" />

                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <!-- submit -->
                        <button type="submit"
                                class="btn rounded-pill px-5 bg-purple bg-purple-hover text-white my-4">
                            بازنشانی رمز عبور
                        </button>
                    </div>

                </form>
            </div>
        </div>

    </div>
    <div class="col-lg-6 col-md-6 col-12">

        <div>
            <img src="~/images/resources/video.svg"
                 alt="بازنشانی رمزعبور"
                 class="img-fluid d-block mx-auto py-5"
                 style="max-height:450px"
                 asp-append-version="true" />
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

