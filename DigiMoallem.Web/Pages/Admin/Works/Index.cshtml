@page
@model DigiMoallem.Web.Pages.Admin.Works.IndexModel

@{
    ViewBag.Title = "لیست درخواست همکاری";
}

<section class="container">

    <h1 class="text-capitalize display-4 mb-5">
        <i class="fa fa-list-alt text-light fa-fw"></i> @ViewBag.Title
    </h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fa fa-check fa-fw"></i> @TempData["Success"]
        </div>
    }

    <div class="clearfix">
        <button type="button" class="btn btn-primary float-left mb-3">
            <i class="fa fa-th-list fa-fw"></i> @Model.WorksCount
        </button>
    </div>

    @if (Model.WorkPagingVM.PageCount > 1)
    {
        <nav>
            <ul class="pagination pagination-sm justify-content-center">
                @for (int i = 1; i <= Model.WorkPagingVM.PageCount; i++)
                {
                    <li class="page-item @(Model.WorkPagingVM.PageNumber == i ? "active" : "")">
                        <a class="page-link" href="/Admin/Messages?PageNumber=@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }

    @if (Model.WorkPagingVM.Works.Any())
    {
        @foreach (Work work in Model.WorkPagingVM.Works)
        {

            <div class="card border-primary mb-3">
                <header class="card-header">تلفن تماس: <span class="text-light">@work.PhoneNumber</span></header>

                <div class="card-body">
                    <h5>مهارت ها</h5>
                    <p class="card-text text-light">@work.Skills.Replace("-", ", ")</p>
                    <h5>سوابق کاری</h5>
                    <p class="card-text text-light">@work.Experiences.Replace("-", ", ")</p>
                    <hr />

                    <div class="clearfix">

                        <span class="my-2 float-left">تاریخ درج پیام: @work.SubmitDate.ToPersianDate()</span>

                        @if (work.Gender)
                        {
                            <span class="float-right">آقا</span>
                        }
                        else
                        {
                            <span class="float-right">خانم</span>
                        }
                    </div>
                </div>

                <footer class="card-footer clearfix">
                    <span class="float-left small">
                        <a asp-page="Edit"
                           asp-route-id="@work.WorkId"
                           class="btn btn-sm btn-warning">
                            <i class="fa fa-pen fa-fw"></i> ویرایش
                        </a>

                        <a asp-page="Delete" asp-route-id="@work.WorkId" class="btn btn-sm btn-danger">
                            <i class="fa fa-trash-alt fa-fw"></i> حذف
                        </a>
                    </span>
                    <span class="float-right mt-1">
                        @if (work.IsChecked)
                        {
                            <span class="badge badge-success text-light">بررسی شده</span>
                        }
                        else
                        {
                            <span class="badge badge-danger text-capitalize">بررسی نشده</span>
                        }
                    </span>
                </footer>
            </div>
        }
    }
    else
    {
        <div class="alert alert-primary border border-warning">
            <p class="mb-0">
                <i class="fa fa-exclamation-triangle fa-fw mx-2"></i> درخواست همکاری وجود ندارد.
            </p>
        </div>
    }

</section>

