@page
@model DigiMoallem.Web.Pages.Admin.Accountings.TeacherStatisticsModel
@inject IAccountingService accountService

@{
    ViewData["Title"] = "آمار استاد";
}

<div class="container">

    <h1 class="my-5"> <i class="fa fa-calculator text-white ml-2"></i> @ViewData["Title"]</h1>

    <!-- create succeeded -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div class="my-3 clearfix">
        <!-- add -->
        <a asp-area=""
           asp-page="Create"
           class="btn btn-outline-success float-right">
            <i class="fa fa-plus ml-1"></i> افزودن واریزی جدید
        </a>
    </div>

    <!-- users table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="th-sm">
                    شناسه
                </th>
                <th class="th-sm">
                    شناسه استاد
                </th>
                <th class="th-sm">
                    نام درس
                </th>
                <th class="th-sm">
                    درصد استاد
                </th>
                <th class="th-sm">
                    مجموع پرداختی ها به استاد بابت درس
                </th>
                <th class="th-sm">
                    سهم استاد
                </th>
                <th class="th-sm">
                    مبلغ قابل پرداخت به استاد
                </th>
                <th class="th-sm">
                    درآمد کل
                </th>
            </tr>
            @if (Model.CourseVM.Courses.Count == 0)
            {
                <tr class="bg-dark text-light">
                    <td colspan="6" class="py-4">
                        <i class="fas fa-exclamation-triangle ml-2"></i> لیست آمار خالی است.
                    </td>
                </tr>
            }
            else
            {
                @foreach (var course in Model.CourseVM.Courses)
                {
        <tr>
            <td class="english-font">@course.CourseId</td>
            <td class="english-font">@course.Teacher</td>
            <td>@course.Title</td>
            <th class="th-sm">
                %@course.TeacherPercent
            </th>
            @*<td class="text-success">
                @accountService.TeacherTotalPaymentForCourse(course.TeacherId, course.CourseId).ThreeDigitSeperator()
            </td>
            <td>
                @if (accountService.TeacherIncomeForCourse(course.TeacherId, course.CourseId) != 0)
                {
                    <span>@accountService.TeacherIncomeForCourse(course.TeacherId, course.CourseId).ThreeDigitSeperator()</span>
                }
                else
                {
                    <span class="badge badge-danger">درصد استاد مشخص نیست</span>
                }
            </td>*@
            <td>
                @{
                    @*var remainingTeacherShare = accountService.RemainingTeacherShareForCourse(course.TeacherId, course.CourseId);

                    if (remainingTeacherShare > 0)
                    {
                        <span class="text-info">بستانکار @remainingTeacherShare.ThreeDigitSeperator()</span>
                    }
                    else if (remainingTeacherShare < 0)
                    {
                        <span class="text-danger">بدهکار @Math.Abs(remainingTeacherShare).ThreeDigitSeperator()</span>
                    }
                    else
                    {
                        <span class="text-success">تصفیه شده</span>
                    }*@
                }
            </td>
            <td>
                @*@accountService.TotalIncomeForCourse(course.TeacherId, course.CourseId).ThreeDigitSeperator()*@
            </td>
        </tr>
                }
            }
        </table>
    </div>

    @if (Model.CourseVM.PageCount > 1)
    {
        <!-- pagination -->
        <nav aria-label="Page navigation" class="my-3">
            <ul class="pagination pagination-circle pg-dark justify-content-center">
                @for (int i = 1; i <= Model.CourseVM.PageCount; i++)
                {
                    <li class="page-item english-font @((Model.CourseVM.CurrentPage == i) ? "active" : "")">
                        <a href="/Admin/Accountings?pageId=@i" class="page-link">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }

</div>

