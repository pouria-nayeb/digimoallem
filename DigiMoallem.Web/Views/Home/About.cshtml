@inject ISettingService settingService

@{
    ViewData["Title"] = "درباره دیجی معلم";
}

<div class="container my-4">
    <div class="row">
        <div class="col-lg-6 col-md-6 col-12">

            <div class="card border-primary my-5">
                <div class="card-header">
                    <i class="fa fa-info-circle ml-2"></i> @ViewData["Title"]
                </div>
                <div class="card-body">

                    @Html.Raw(settingService.GetSettingById(1).AboutUs)

                    <div class="clearfix">
                        <img src="~/images/resources/logo.png"
                             alt="لوگو دیجی معلم"
                             class="img-fluid float-left" />
                    </div>

                </div>
            </div>

        </div>
        <div class="col-lg-6 col-md-6 col-12">

            <img src="~/images/resources/about-us.svg"
                 alt="درباره دیجی معلم"
                 class="img-fluid my-4" />

        </div>
    </div>
</div>
