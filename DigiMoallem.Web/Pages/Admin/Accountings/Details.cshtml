@page "{id}"
@model DigiMoallem.Web.Pages.Admin.Accountings.DetailsModel

@{
    ViewData["Title"] = "جزئیات واریزی";
    int teacherTotalIncomePerCourse = (int)ViewData["TeacherIncomePerCourse"];
    int teacherRemaningPayment = (int)ViewData["TeacherRemaningPayment"];
}

<h1 class="my-5"> <i class="fa fa-book ml-2"></i> @ViewData["Title"]</h1>

<!-- breadcrumb -->
<div class="bc-icons-2">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb dark-bg-admin lighten-5">
            <li class="breadcrumb-item">
                <a class="black-text" href="/Admin/Accountings">لیست واریزی ها</a><i class="fas fa-caret-left mx-2"></i>
            </li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>

</div>

<!-- payments table -->
<div class="table-responsive">
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr>
                <th class="th-sm">
                    شناسه
                </th>
                <th class="th-sm">
                    نام مدرس
                </th>
                <th class="th-sm">
                    نام درس
                </th>
                <th class="th-sm">
                    میزان واریزی
                </th>
                <th class="th-sm">
                    تاریخ
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Payment.PaymentId</td>
                <td>@Model.Payment.User.UserName</td>
                <td>@Model.Payment.Course.Title</td>
                <td>@Model.Payment.Amount.ThreeDigitSeperator()</td>
                <td>@Model.Payment.PaymentDate.ToPersianDate()</td>
            </tr>
        </tbody>
    </table>
</div>

<!-- payments table -->
<div class="table-responsive">
    <table class="table table-dark table-striped table-bordered">
        <thead>
            <tr class="text-center">
                <th class="th-sm">
                    دریافتی های استاد
                </th>
                <th class="th-sm">
                    طلب باقی مانده
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="text-center">
                <td>@teacherTotalIncomePerCourse.ThreeDigitSeperator()</td>
                <td>@teacherRemaningPayment.ThreeDigitSeperator()</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="form-group my-5">
    <!-- back to accountings -->
    <a asp-area=""
       asp-page="Index" 
       class="btn btn-outline-warning btn-sm">
        <i class="fas fa-arrow-right ml-2"></i> بازگشت
    </a>
</div>
