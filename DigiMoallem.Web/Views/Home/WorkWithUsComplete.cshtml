@model WorkComplementDataViewModel

@{
    ViewData["Title"] = "فرم تکمیلی درخواست همکاری";
}

<div class="container my-4">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-12">

            <div class="card border-primary">
                <div class="card-header">
                    <i class="fa fa-user-graduate ml-2"></i> @ViewData["Title"]
                </div>
                <div class="card-body">

                    <form method="post">

                        <input type="hidden" asp-for="WorkId" />
                        <input type="hidden" name="userid" value="@ViewBag.UserId" />

                        @if (ViewData["NotValid"] != null)
                        {
                            <!-- user inputs is not valid -->
                            <div class="alert alert-danger">
                                @ViewData["NotValid"]
                            </div>
                        }

                        <div asp-validation-summary="All"></div>

                        <!-- ContributionFields -->
                        <div class="form-group">
                            <label asp-for="ContributionFields"></label>
                            <textarea asp-for="ContributionFields" class="form-control" rows="3"
                                      placeholder="برای مثال: آموزش اکسل-آموزش اکسس-..."></textarea>

                            <div class="alert alert-secondary p-2">
                                <strong>توجه:</strong> زمینه های خود را با - از یکدیگر جدا کنید.
                            </div>
                        </div>

                        <!-- skills -->
                        <div class="form-group">
                            <label asp-for="Skills"></label>
                            <textarea asp-for="Skills" class="form-control" rows="3"></textarea>

                            <div class="alert alert-secondary p-2">
                                <strong>توجه:</strong> مهارت های خود را با - از یکدیگر جدا کنید.
                            </div>
                        </div>

                        <!-- experiences -->
                        <div class="form-group">
                            <label asp-for="Experiences"></label>
                            <textarea asp-for="Experiences" class="form-control" rows="3"></textarea>

                            <div class="alert alert-secondary p-2">
                                <strong>توجه:</strong> سوابق کاری خود را با - از یکدیگر جدا کنید.
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- submit -->
                            <button type="submit"
                                    class="btn rounded-pill px-5 bg-purple bg-purple-hover text-white my-4">
                                تکمیل فرم درخواست همکاری
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
        <div class="col-lg-6 col-md-4 col-12">

            <div>
                <img src="~/images/resources/video.svg"
                     alt="بازنشانی رمزعبور"
                     class="img-fluid d-block mx-auto py-5"
                     style="max-height:450px"
                     asp-append-version="true" />
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

