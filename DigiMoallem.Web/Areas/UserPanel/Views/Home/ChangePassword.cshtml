@model ChangePasswordViewModel

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="loader d-flex justify-content-center align-items-center" style="display: block;">
    <i class="fa fa-circle-notch fa-3x text-white fa-spin"></i>
</div>

<div class="container my-4" style="display:none;">

    <div class="row">

        <div class="col-12 col-md-8">

            <div class="card">
                <div class="card-header">
                    <i class="fa fa-users-cog ml-1"></i> @ViewData["Title"]
                </div>
                <div class="card-body">

                    <form method="post">

                        <div asp-validation-summary="ModelOnly"></div>

                        @if (ViewData["DbFailure"] != null)
                        {
                            <div class="alert alert-success">
                                @ViewData["DbFailure"]
                            </div>
                        }

                        <!-- old password -->
                        <div class="form-group">
                            <label asp-for="OldPassword"></label>
                            <input type="password"
                                   class="form-control text-direction-ltr text-left english-font"
                                   asp-for="OldPassword" />

                            <span class="text-danger" asp-validation-for="OldPassword"></span>
                        </div>

                        <!-- new password -->
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password"
                                   class="form-control text-direction-ltr text-left english-font"
                                   asp-for="Password" />

                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>

                        <!-- confirm new password -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password"
                                   class="form-control text-direction-ltr text-left english-font"
                                   asp-for="ConfirmPassword" />

                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div class="form-group">
                            <button class="btn btn-primary rounded-pill">
                                <i class="fa fa-pen ml-2"></i> @ViewData["Title"]
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>

        <div class="col-12 col-md-4">

            <partial name="_SidebarPartial" />

        </div>

    </div>

</div>

@section Scripts {
    <script src="~/js/main.js"></script>
}