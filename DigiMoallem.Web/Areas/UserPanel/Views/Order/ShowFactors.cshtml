@model IEnumerable<DigiMoallem.DAL.Entities.Orders.Order>

@{
    ViewData["Title"] = $"لیست سفارشات";
}

<div class="container my-4">

    <div class="row">

        <div class="col-12 col-md-8">

            <div class="card">

                <div class="card-header">
                    <i class="fa fa-list-ul ml-1"></i> @ViewData["Title"]
                </div>

                <div class="card-body p-0">

                    <div class="table-responsive">

                        <table class="table table-bordered table-striped mb-0">

                            <thead>
                                <tr>
                                    <th>شماره فاکتور</th>
                                    <th>تاریخ</th>
                                    <th>جمع</th>
                                    <th>وضعیت</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>

                            <tbody>
                                @if (Model.Count() == 0)
                                {
                                    <tr class="text-dark">
                                        <td colspan="5">
                                                <i class="fa fa-info-circle ml-1"></i> فاکتوری جهت نمایش وجود ندارد.
                                        </td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td class="english-font">@order.OrderId</td>
                                            <td class="english-font">@order.CreateDate.ToPersianDate()</td>
                                            <td>@order.TotalPrice.ThreeDigitSeperator()</td>
                                            <td>
                                                @if (order.IsFinally)
                                                {
                                                    <span class="badge badge-success">پرداخت شده</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">پرداخت نشده</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Cart/@order.OrderId" class="btn btn-primary btn-sm">
                                                    <i class="fa fa-eye mx-2"></i> مشاهده جزئیات
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>

                    </div>
                </div>

            </div>

        </div>

        <div class="col-12 col-md-4">

            <partial name="_SideBarPartial" />

        </div>

    </div>
</div>

